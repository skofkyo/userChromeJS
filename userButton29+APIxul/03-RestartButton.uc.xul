<?xml version="1.0"?>
<!--
// ==UserScript==
// @name           reStartButton.uc.xul
// @namespace      https://github.com/skofkyo/userChromeJS
// @description    重新啟動按鈕
// @include        main
// @compatibility  Firefox 29+ 
// @author         skofkyo
